<!DOCTYPE html>
<html lang="en">
  <!-- add head & header /-->
  <%- include('include/_header') %>

  <!-- main site -->
  <main id="site-main">
    <div class="container">
      <div class="box-nav d-flex justify-between">
        <div class="filter">
          <a href="/"
            ><i class="fas fa-angle-double-left"></i> Tout les utilisateurs</a
          >
        </div>
      </div>
      <div class="form-title text-center">
        <h2 class="text-dark">Modifier l'utilisateur</h2>
        <span class="text-light">Mettre a jour le compte</span>
      </div>

      <!-- form handling -->
      <form method="post" id="update_user">
        <div class="new_user">
          <div class="form-group">
            <label for="name" class="text-light">Identifiant</label>
            <input type="hidden" name="id" value="" />
            <input type="text" name="name" placeholder="" />
          </div>
          <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" placeholder="" />
          </div>

          <div class="form-group">
            <label for="gender" class="text-light">Genre</label>
            <div class="radio inline">
              <input type="radio" id="radio-2" name="gender" value="male" />
              <label for="radio-2" class="radio-label">Homme</label>
            </div>
            <div class="radio inline">
              <input type="radio" id="radio-3" name="gender" value="Female" />
              <label for="radio-3" class="radio-label">Femme</label>
            </div>
            <div class="radio inline">
              <input type="radio" id="radio-4" name="gender" value="Other" />
              <label for="radio-4" class="radio-label">Autre</label>
            </div>
          </div>

          <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
              <input type="radio" id="radio-5" name="gender" value="Active" />
              <label for="radio-5" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
              <input type="radio" id="radio-6" name="gender" value="Inactive" />
              <label for="radio-6" class="radio-label">Inactive</label>
            </div>
          </div>

          <div class="form-group">
            <button type="submit" class="btn text-dark update">
              Sauvegarder
            </button>
          </div>
        </div>
      </form>
    </div>
  </main>
  <!-- /main site -->
</html>
